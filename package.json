{
  "name": "note-app-template",
  "version": "0.0.1",
  "description": "Node application template with essentials tools.",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sandb0/node-app-template.git"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8",
    "yarn": ">=1.22 <2"
  },
  "scripts": {
    "prepare": "husky install",
    "start:local": "ts-node-dev -r tsconfig-paths/register src/main.ts",
    "build": "tsc --build tsconfig.json && yarn tsc-alias",
    "test": "jest --colors --passWithNoTests",
    "lint:tsc": "tsc -p tsconfig.json --noEmit",
    "lint:eslint": "eslint src/**/*.{js,jsx,ts,tsx} --fix",
    "lint:prettier": "prettier --write .",
    "project:deduplicate": "yarn-deduplicate -s highest yarn.lock"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@faker-js/faker": "^7.6.0",
    "@types/jest": "^29.2.5",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.6.8",
    "tsconfig-paths": "^4.0.0",
    "tspath": "^2.6.8",
    "typescript": "^4.7.3",
    "yarn-deduplicate": "^6.0.1"
  }
}
